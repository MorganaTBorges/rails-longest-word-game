<div class='container'>
  <div>
    <h1 class='row justify-content-center'>New Game</h1>
    <ul class='row justify-content-center'>
      <% @letters.each do |letter| %>
      <li><div class='letter-box'><%= letter.upcase %></div></li>
      <% end %>
    </ul>

  <div class='row justify-content-center'>
      <form action="/score" class="form-inline">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :letters, @letters %>
          <div class="form-group mb-2">
              <input class="form-control mb-2" type="text" name="word">
              <button type="submit" value="Play" class="btn btn-primary mb-2">Play!</button>
          </div>
      </form>
  </div>
    <p class='row justify-content-center'>What is the longest word you can find?</p>
  </div>
</div>
